<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GhostKitchen App</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>
<body>
  <div class="container"> 
    <nav>
    </nav>
    <main class="row">
      <h1 class="display-5">GhostKitchen App</h1>
      <h2>Menu:</h2>
      <div class="container">
        <hr class="my-7">
        <div class="row">
          <div class="col-3"><h4>Name</h4></div>
          <div class="col-3"><h4>Description</h4></div>
          <div class="col-3"><h4>Calories</h4></div>
          <div class="col-3"><h4>Price</h4></div>
        </div>
        <hr class="my-7">
        <div class="row align-items-start">
          <% meals.forEach(function (f) {%>
          <div class="col-3"><%= f.meal_name%> </div>
          <div class="col-3"><%= f.description%> </div>
          <div class="col-3"><%= f.calories%> </div>
          <div class="col-1">$<%= f.price %></div>
          <div class="col-2">
            <button type="submit" class="btn btn-primary">Order</button>
          </div>
          
            <% }) %>
        </div>
      </div>
      <!-- /.col-8 -->

      <!-- <div class="col-4"></div> -->
    </main>


  </div>
  
  
</body>
</html>