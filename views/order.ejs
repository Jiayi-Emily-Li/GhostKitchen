<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GhostKitchen App</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
  <div class="container">
    <div class="jumbotron">
      <div class="display-4">Your Order</div>
    </div>
    <hr />
    <div class="row">
      <div class="col-4">
        <form action="/order" method="POST">
          <div class="display-6 text-capitalize">
            <%= meal.meal_name %>
          </div>
          <br />
          <div class="lead">
            <%= meal.description %>
          </div>
          <br />
          <div>
            <label for="quantity-select" style="font-weight: bold;">Quantity</label>
            <select class="form-control" id="quantity-select" name="quantity">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
            </select>
          </div>
          <br />
          <div>
            <label for="pickup-select" style="font-weight: bold;">Pickup Type</label>
            <select class="form-control" id="pickup-select" name="pickup">
              <% pickups.forEach(function (f) {%>
                <option value="<%= f.id %>">
                  <%= f.type%>
                </option>
                <% }) %>
            </select>
          </div>
          <br />
          <div>
            <label for="location-select" style="font-weight: bold;">Location</label>
            <select class="form-control" id="location-select" name="location">
              <% locations.forEach(function (f) {%>
                <option value="<%= f.id %>">
                  <%= f.address%>, <%= f.state%>
                </option>
                <% }) %>
            </select>
          </div>
          <br />
          <div>
            <button type="submit" class="btn btn-primary"
                    style="width: 100%;" name="mealID"
                    value="<%= meal.id %>">Checkout</button>
          </div>
        </form>
      </div>
    </div>
  </div>

</body>

</html>
