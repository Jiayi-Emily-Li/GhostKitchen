<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GhostKitchen</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>

<body>
    <main>
        <div class="container">
            <div class="jumbotron">
                <div class="display-4">Your current Orders:</div>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Description</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Total</th>
                        <th scope="col">Pick Up</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(function (f) {%>
                        <tr>
                            <td scope="col">
                                <%= f.meal_name %>
                            </td>
                            <td scope="col">
                                <%= f.description%>
                            </td>
                            <td scope="col">
                                <%= f.quantity %>
                            </td>
                            <td scope="col">
                                $<%= f.price * f.quantity %>
                            </td>
                            <td scope="col">
                                <%= f.type %>
                            </td>
                            <td>
                                <form action="/user/orders/<%= f.id %>" method="GET">
                                    <!-- <input type="hidden" name="orderID" value="<%= f.id %>"> -->
                                    <button type="submit" class="btn btn-primary">
                                        UPDATE
                                    </button>
                                </form>
                            </td>
                            <td>
                                <form action="/user/orders/delete" method="POST">
                                    <input type="hidden" name="orderID" value="<%= f.id %>">
                                    <button type="submit" class="btn btn-danger">
                                        DELETE
                                    </button>
                                </form>
                            </td>
                            </form>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <form action="/user" method="GET">
                <button type="submit" class="btn btn-primary" style="width: 30%;">
                  Home
                </button>
              </form>
        </div>
    </main>
</body>

</html>
